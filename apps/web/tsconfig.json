{
  "extends": "@liquidai/leap-typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
      "@liquidai/leap-lib/*": ["packages/lib/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.config.cjs",
    "jest.setup.ts",
    "postcss.config.mjs",
    "tailwind.config.js",
    ".storybook/preview.tsx",
    ".storybook/main.ts"
  ],
  "exclude": ["node_modules"]
}
